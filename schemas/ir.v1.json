{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/ir/v1.json",
  "type": "object",
  "required": ["kind", "version", "metadata", "nodes"],
  "properties": {
    "kind": {"const": "process"},
    "version": {"const": "1"},
    "metadata": {
      "type": "object",
      "required": ["name", "createdAt", "risk", "termination"],
      "properties": {
        "name": {"type": "string"},
        "createdAt": {"type": "string", "format": "date-time"},
        "risk": {"type": "string", "enum": ["low", "medium", "high"]},
        "policyRefs": {"type": "array", "items": {"type": "string"}},
        "principal": {
          "type": "object",
          "properties": {
            "id": {"type": "string"},
            "permissions": {"type": "array", "items": {"type": "string"}}
          },
          "additionalProperties": false
        },
        "entryNodes": {"type": "array", "items": {"type": "string"}},
        "termination": {
          "type": "object",
          "required": ["maxNodes", "maxRuntimeMs"],
          "properties": {
            "maxNodes": {"type": "integer", "minimum": 1},
            "maxRuntimeMs": {"type": "integer", "minimum": 1000},
            "warnAtPct": {"type": "integer", "minimum": 50, "maximum": 99}
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "nodes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "actionRef", "schemaVersion", "input"],
        "properties": {
          "id": {"type": "string", "minLength": 1},
          "actionRef": {"type": "string", "minLength": 1},
          "schemaVersion": {"type": "string", "pattern": "^v[0-9]+$"},
          "dependsOn": {"type": "array", "items": {"type": "string"}, "uniqueItems": true},
          "input": {"type": "object"},
          "retry": {
            "type": "object",
            "properties": {
              "maxAttempts": {"type": "integer", "minimum": 0},
              "backoffMs": {"type": "integer", "minimum": 0}
            },
            "additionalProperties": false
          },
          "timeoutMs": {"type": "integer", "minimum": 100},
          "approval": {
            "type": "object",
            "properties": {
              "required": {"type": "boolean"},
              "role": {"type": "string"},
              "conditions": {"type": "array", "items": {"type": "string"}}
            },
            "additionalProperties": false
          },
          "assertions": {"type": "array", "items": {"type": "string"}},
          "idempotency": {
            "type": "object",
            "properties": {
              "behavior": {"type": "string", "enum": ["default", "skip-if-completed"]}
            },
            "additionalProperties": false
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
